---
const { title = 'Notes' } = Astro.props;
import { buildNavigation } from '../utils/navigation';
import Header from '../components/Header.astro';
import NavList from '../components/NavList.astro';
import '../styles/style.css';

// Build navigation from content collection
const navData = await buildNavigation();

// Get current URL path for active state
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{title} | Notes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
  </head>
  <body>
    <div class="layout">
      <Header />
      <div class="sidebar-backdrop" id="sidebar-backdrop"></div>
      <nav class="sidebar" id="sidebar">
        <NavList items={navData} currentPath={currentPath} />
      </nav>
      <main class="content">
        <slot />
      </main>
    </div>
  </body>
</html>

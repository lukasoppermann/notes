---
const { title = 'Notes' } = Astro.props;
import { buildNavigation } from '../utils/navigation';
import Header from '../components/Header/Header.astro';
import Sidebar from '../components/Sidebar/Sidebar.astro';
import '../styles/light.theme.css';
import '../styles/dark.theme.css';
import '../styles/base.css';
import styles from './Layout.module.css';
import '../styles/table.css';
import Content from '../components/Content/Content.astro';

// Build navigation from content collection
const navData = await buildNavigation();

// Get current URL path for active state
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{title} | Notes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
  </head>
  <body>
    <div class={styles.App} data-app>
      <Sidebar items={navData} currentPath={currentPath} />
      <Content>
        <Header />
        <article class={styles.article}>
          <slot />
        </article>
      </Content>
    </div>
    <script>
      const mobileBreakpoint = '700px';
      const mediaQuery = window.matchMedia(`(max-width: ${mobileBreakpoint})`);
      
      function handleMobileChange(e: MediaQueryListEvent | MediaQueryList) {
        if (e.matches) {
          document.body.setAttribute('data-isMobile', '');
        } else {
          document.body.removeAttribute('data-isMobile');
        }
      }
      
      // Initial check
      handleMobileChange(mediaQuery);
      
      // Listen for changes
      mediaQuery.addEventListener('change', handleMobileChange);
    </script>
  </body>
</html>

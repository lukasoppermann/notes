---
const { title = 'Notes' } = Astro.props;
import { buildNavigation } from '../utils/navigation';
import Header from '../components/Header/Header.astro';
import Sidebar from '../components/Sidebar/Sidebar.astro';
import '../styles/light.theme.css';
import '../styles/dark.theme.css';
import '../styles/base.css';
import styles from './Layout.module.css';
import '../styles/table.css';
import Content from '../components/Content/Content.astro';

// Build navigation from content collection
const navData = await buildNavigation();

// Get current URL path for active state
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{title} | Notes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
    <script src="/scripts/isMobile.js" is:inline></script>
  </head>
  <body>
    <div class={styles.App} data-app>
      <Sidebar items={navData} currentPath={currentPath} />
      <Content>
        <Header />
        <div class={styles.article}>
          <slot />
        </div>
      </Content>
    </div>
    <script>
      window.isMobile();
    </script>
  </body>
</html>

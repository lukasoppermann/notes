---
const { title = 'Notes' } = Astro.props;
import { buildNavigation } from '../utils/navigation';
import Header from '../components/Header.astro';
import NavList from '../components/NavList.astro';
import styles from './Layout.module.css';
import '../styles/base.css';
import '../styles/table.css';

// Build navigation from content collection
const navData = await buildNavigation();

// Get current URL path for active state
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{title} | Notes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
  </head>
  <body>
    <div class={styles.layout}>
      <Header />
      <div class={styles.sidebarBackdrop} data-sidebar-backdrop></div>
      <nav class={styles.sidebar} data-sidebar>
        <NavList items={navData} currentPath={currentPath} />
      </nav>
      <main class={styles.content}>
        <slot />
      </main>
    </div>
  </body>
</html>
